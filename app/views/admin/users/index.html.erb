<div class="continer">
  <div class="row my-3 ml-5">
    <h4 style="background-color: #dcdcdc;">User一覧</h4>
  </div>

  <div class="row">
    <div class="col-sm-10 px-sm-0 offset-sm-1">
      <table class="table">
        <thead>
          <tr bgcolor="#dcdcdc">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>プロフィール画像</th>
            <th>登録日時</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.name, admin_user_path(user.id) %></td>
          <td><%= user.email %></td>
          <td><%= image_tag user.get_profile_image(100,100), class: "img-thumbnail" %></td>
          <td><%= user.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <% end %>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>
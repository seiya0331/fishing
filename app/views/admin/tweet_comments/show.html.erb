<div class="container p-5">
  <div class="row">
      <h4 style="background-color: #dcdcdc;"><%= @comment.user.name %>さんの投稿詳細</h4>
  </div>
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <table class="table table-borderless">
        <tr>
          <th>ユーザーID</th>
          <td><%= @comment.user.id %></td>
        </tr>
        <tr>
          <th>コメントID</th>
          <td><%= @comment.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @comment.user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @comment.user.email %></td>
        </tr>
        <tr>
          <th>ツイートID</th>
          <td><%= @comment.tweet.id %></td>
        </tr>
        <tr>
          <th>コメント内容</th>
          <td><%= @comment.comment %></td>
        </tr>
        <tr>
          <th>投稿日</th>
          <td><%= @comment.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td><%= link_to "削除", admin_tweet_comment_path(@comment), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-sm btn-danger" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class="container p-5">
  <div class="row">
      <h4 style="background-color: #dcdcdc;"><%= @tweet.user.name %>さんの投稿詳細</h4>
  </div>
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <table class="table table-borderless">
        <tr>
          <th>ユーザーID</th>
          <td><%= @tweet.user.id %></td>
        </tr>
        <tr>
          <th>投稿ID</th>
          <td><%= @tweet.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @tweet.user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @tweet.user.email %></td>
        </tr>
        <tr>
          <th>投稿画像</th>
          <td><%= image_tag @tweet.get_image , size: "250x200" %></td>
        </tr>
        <tr>
          <th>テキスト</th>
          <td><%= @tweet.text %></td>
        </tr>
        <tr>
          <th>投稿日</th>
          <td><%= @tweet.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td><%= link_to "削除", admin_tweet_path(@tweet), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-sm btn-danger" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
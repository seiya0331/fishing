<!-- ユーザーの詳細  -->
<div class="continer">
  <div class="row">
    <div class="col">
      <div>
        <h3><%= @user.name %></h3>
        <%= image_tag @user.get_profile_image(100,100) %>
        <% if @user == current_user %>
          <p><%= link_to "プロフィール編集", edit_user_path %></p>
        <% end %>
      </div>
<!-- ユーザーの投稿一覧 -->
      <%= render "user/tweets/list", tweets: @tweets, user: @user %>
    </div>
  </div>
</div>
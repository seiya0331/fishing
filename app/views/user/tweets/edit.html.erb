<div class="container p-5">
  <div class="row mb-5">
    <h1 style="background-color: #dcdcdc;">編集画面</h1>
  </div>
  
  <div class="container">
      <%= form_with model: @tweet do |f| %>
      
      <h4>画像</h4>
      <%= f.file_field :image, class:"form-control",accept: "image/*" %>
      
      <h4>テキスト</h4>
      <%= f.text_area :text, class: "form-control", size: "20x10" %>
      <%= f.submit '保存' , class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>

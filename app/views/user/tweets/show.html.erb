<div class="continer">
  <div class="row">
    <div class="col">
      <div>
        <%= image_tag @tweet.get_image %>
        <p>投稿ユーザー画像:<%= image_tag 'sample-author1.jpg' %></p>
        <p><%= @tweet.text %></p>
        <p>ユーザーネーム:<%= @tweet.user.name %></p>
        <p>投稿日:<%= @tweet.created_at.strftime('%Y/%m/%d') %></p>
        <% if @tweet.user == current_user %>
          <%= link_to "削除", tweets_path(@tweet), method: :delete %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="continer">
  <div class="row">
    <div class="col">
      <div>
        <%= image_tag @tweet.get_image %>
        <p><%= @tweet.text %></p>
        <p>プロフィール画像:<%= image_tag @tweet.user.get_profile_image(100,100) %></p>
        <p>ユーザーネーム:<%= @tweet.user.name %></p>
        <p>いいね:<%= render "user/favorites/btn", tweet: @tweet %></p>
        <p>投稿日:<%= @tweet.created_at.strftime('%Y/%m/%d') %></p>
        <% if @tweet.user == current_user %>
          <%= link_to "削除", tweet_path(@tweet), method: :delete %>
        <% end %>
      </div>
    </div>
  </div>
</div>